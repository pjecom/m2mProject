<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

	<!-- pattern  -->
	<property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) - %msg%n"/>

	<property name="LOG_PATH" value="./logs" />

	<springProfile name="!prod">
		<property name="ROOT_LEVEL" value="DEBUG"/>
		<!-- SQL문만을 로그로 남기며, PreparedStatement일 경우 관련된 argument 값으로 대체된 SQL문이 보여진다. -->
		<logger name="jdbc.sqlonly" level="DEBUG"/>
	</springProfile>

	<!-- Console Appender  -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="com.m2m.fo.config.MDCFilter" />
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<appender name="LOG_FILE" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>business</key>
			<defaultValue>undefined</defaultValue>
		</discriminator>
		<sift>
			<appender name="LOG_FILE-${business}" class="ch.qos.logback.core.rolling.RollingFileAppender">
				<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		            <fileNamePattern>${LOG_PATH}/${business}/%d{yyyy-MM-dd}.%i.log</fileNamePattern>
		            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		                <maxFileSize>10MB</maxFileSize>
		            </timeBasedFileNamingAndTriggeringPolicy>
		        </rollingPolicy>

				<encoder>
					<charset>UTF-8</charset>
					<pattern>${LOG_PATTERN}</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>

	<logger name="_org.springframework.web.servlet.HandlerMapping.Mappings" level="WARN"/>

	<logger name="com.m2m.fo.config.HttpMethodFilter" level="WARN"/>
	<logger name="com.m2m.fo.util.ExcuteTimeTrace" level="${ROOT_LEVEL}"/>

	<logger name="com.zaxxer.hikari" level="${ROOT_LEVEL}"/>
	<logger name="com.zaxxer.hikari.HikariConfig" level="WARN"/>
	<logger name="com.zaxxer.hikari.pool.HikariPool" level="WARN"/>

	<logger name="httpclient" level="${ROOT_LEVEL}"/>

	<logger name="io.lettuce" level="${ROOT_LEVEL}"/>
	<logger name="io.lettuce.core.RedisChannelHandler" level="WARN"/>
	<logger name="io.lettuce.core.protocol" level="WARN"/>

	<logger name="jdbc.audit" level="WARN"/>
	<logger name="jdbc.connection" level="WARN"/>
	<logger name="jdbc.resultset" level="WARN"/>
	<logger name="jdbc.resultsettable" level="WARN"/>
 	<logger name="jdbc.sqlonly" level="${ROOT_LEVEL}"/>
	<logger name="jdbc.sqltiming" level="DEBUG" additivity="false"/>

	<logger name="net.sf.ehcache" level="${ROOT_LEVEL}"/>

	<logger name="org.apache" level="${ROOT_LEVEL}"/>
	<logger name="org.apache.catalina" level="WARN"/>
	<logger name="org.apache.commons.digester.Digester" level="WARN"/>
	<logger name="org.apache.coyote" level="WARN"/>
	<logger name="org.apache.jasper" level="WARN"/>
	<logger name="org.apache.tomcat" level="WARN"/>
	<logger name="org.apache.tiles.definition.dao.BaseLocaleUrlDefinitionDAO" level="WARN"/>
	<logger name="org.apache.tiles.impl.BasicTilesContainer" level="WARN"/>

	<logger name="org.hibernate.validator" level="WARN"/>

	<logger name="org.mybatis.spring" level="${ROOT_LEVEL}"/>
	<logger name="org.mybatis.spring.SqlSessionFactoryBean" level="WARN"/>
	<logger name="org.mybatis.spring.SqlSessionUtils" level="WARN"/>
	<logger name="org.mybatis.spring.mapper.ClassPathMapperScanner" level="WARN"/>
	<logger name="org.mybatis.spring.transaction.SpringManagedTransaction" level="WARN"/>

	<logger name="org.quartz.core" level="${ROOT_LEVEL}"/>
	<logger name="org.quartz.core.QuartzSchedulerThread" level="WARN"/>
	<logger name="org.quartz.simpl" level="WARN"/>

	<logger name="org.springframework" level="${ROOT_LEVEL}"/>
	<logger name="org.springframework.aop.aspectj.annotation.ReflectiveAspectJAdvisorFactory" level="WARN"/>
	<logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" level="WARN"/>
	<logger name="org.springframework.boot.autoconfigure" level="WARN"/>
	<logger name="org.springframework.context.annotation.ClassPathBeanDefinitionScanner" level="WARN"/>
	<logger name="org.springframework.context.support.PostProcessorRegistrationDelegate" level="WARN"/>
	<logger name="org.springframework.core.env.PropertySourcesPropertyResolver" level="WARN"/>
	<logger name="org.springframework.data.convert.CustomConversions" level="WARN"/>
	<logger name="org.springframework.data.redis.core.RedisConnectionUtils" level="WARN"/>
	<logger name="org.springframework.data.repository.config.RepositoryConfigurationDelegate" level="WARN"/>
	<logger name="org.springframework.jdbc.datasource.DataSourceUtils" level="WARN"/>
	<logger name="org.springframework.messaging.simp.broker.SimpleBrokerMessageHandler" level="WARN"/>
	<logger name="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" level="WARN"/>
	<logger name="org.springframework.security.web" level="WARN"/>
	<logger name="org.springframework.ui.context.support.UiApplicationContextUtils" level="WARN"/>
	<logger name="org.springframework.web.SimpLogging" level="WARN"/>
	<logger name="org.springframework.web.servlet.DispatcherServlet" level="WARN"/>
	<logger name="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" level="WARN"/>
	<logger name="org.springframework.web.servlet.mvc.method.annotation" level="WARN"/>
	<logger name="org.springframework.web.servlet.view.ContentNegotiatingViewResolver" level="WARN"/>
	<logger name="org.springframework.web.servlet.view.ContentNegotiatingViewResolver" level="WARN"/>
	<logger name="org.springframework.web.servlet.view.tiles3.TilesView" level="WARN"/>
	<logger name="org.springframework.web.socket.config.WebSocketMessageBrokerStats" level="WARN"/>
	<logger name="org.springframework.web.socket.handler.LoggingWebSocketHandlerDecorator" level="WARN"/>
	<logger name="org.springframework.web.socket.messaging.WebSocketAnnotationMethodMessageHandler" level="WARN"/>
	<logger name="org.springframework.web.socket.server.support.WebSocketHandlerMapping" level="WARN"/>
	<logger name="org.springframework.web.socket.sockjs.transport.handler.DefaultSockJsService" level="WARN"/>
	<logger name="org.springframework.ws.soap.addressing.server.AnnotationActionEndpointMapping" level="WARN"/>

	<logger name="springfox.documentation" level="${ROOT_LEVEL}"/>


	<!-- root레벨 설정  -->
	<root level="${ROOT_LEVEL}">
		<springProfile name="!prod">
			<appender-ref ref="CONSOLE" />
<!-- 			<appender-ref ref="LOG_FILE"/>  -->
		</springProfile>
	</root>

</configuration>
